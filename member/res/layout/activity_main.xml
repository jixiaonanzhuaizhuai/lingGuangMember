<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="菜单" />
        
        <ImageView
            android:id="@+id/imageView1"
            android:scaleType="centerInside"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/menuBtn"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/messageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@drawable/login_btn_bg"
            android:text="消息" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/messageBtn"
            android:background="@drawable/login_btn_bg"
            android:text="签到" />

    </RelativeLayout>
	
    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
        
	    <ImageView
            android:id="@+id/touxiang"
            android:scaleType="centerInside"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang" />
	    
	    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="姓名：张三" />
	    <TextView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="卡号：0101001" />

	    <TextView
	        android:id="@+id/scores"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/name"
	        android:layout_toRightOf="@+id/touxiang"
	        android:layout_marginLeft="20dp"
        	android:layout_marginTop="10dp"
	        android:text="积分：88" />
	    
	    <TextView
	        android:id="@+id/grades"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/card"
	        android:layout_toRightOf="@+id/name"
	        android:layout_marginLeft="20dp"
        	android:layout_marginTop="10dp"
	        android:text="等级：中" />

	    <Button
	        android:id="@+id/moreInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/scores"
			android:layout_toRightOf="@+id/touxiang"	    
			android:layout_marginLeft="50dp"    
	        android:text="更多信息" />
	    
	    <TextView
	        android:id="@+id/editInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/moreInfo"
	        android:layout_toRightOf="@+id/moreInfo"
	        android:layout_marginRight="10dp"
	        android:layout_marginLeft="30dp"
	        android:text="编辑" />
	    
	    
	</RelativeLayout>
	
	<View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="即将参与的活动" />
	    
	    <ImageView
            android:id="@+id/imageView3"
            android:scaleType="centerInside"
            android:layout_width="100dip"
            android:layout_height="130dip"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/shengdanjie" />
	    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:text="活动名称：欢度圣诞节" />
	    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/textView3"
        android:text="黑龙江广播电视台诚邀全体龙广会员一起来参加圣诞party!!" />
	    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:text="更多活动>>" />
	    
	    

	    
	</RelativeLayout>
	
	<View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="即将参与的活动" />
	    
	    <ImageView
            android:id="@+id/imageView4"
            android:scaleType="centerInside"
            android:layout_width="100dip"
            android:layout_height="130dip"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/shengdanjie" />
	    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:text="活动名称：欢度圣诞节" />
	    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/textView7"
        android:text="黑龙江广播电视台诚邀全体龙广会员一起来参加圣诞party!!" />
	    <TextView
        android:id="@+id/textView9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:text="更多活动>>" />
	    
	</RelativeLayout>
	
	<View
        android:id="@+id/view4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />
	
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    
	    <ImageView
            android:id="@+id/imageView5"
            android:scaleType="centerInside"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang" />
	    
	    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView5"
        android:text="活动列表" />
	    
	</RelativeLayout>
   

</LinearLayout>